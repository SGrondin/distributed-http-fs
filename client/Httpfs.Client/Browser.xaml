<Window x:Class="Httpfs.Client.Browser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HTTPFS Browser" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Row="0">
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="Create new" Name="FileMenuCreate"></MenuItem>
                    <MenuItem Header="Upload" Name="FileMenuUpload"></MenuItem>
                    <MenuItem Header="Delete" Name="FileMenuDelete"></MenuItem>
                </MenuItem>
            </Menu>
        </Grid>

        <Grid Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <ListView Name="FolderListView" Grid.Column="0"></ListView>
            <ListView Name="CurrentFolderListView" Grid.Column="1"></ListView>
        </Grid>
    </Grid>
</Window>
